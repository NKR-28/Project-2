<div class="row">
  <div class="col-md-6">
    <h2 class="content has-text-centered">Login</h2>

    <form class="form login-form">

      <div class="content has-text-centered">
        <label for="email-login">Email:</label>
        <input class="input is-rounded input is-primary" type="text" id="email-login" />
      </div>

      <div class="content has-text-centered">
        <label for="password-login">Password:</label>
        <input class="input is-rounded input is-primary"type="password" id="password-login" />
      </div>

      <div class="content has-text-centered">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>

    </form>

  </div>
  
  <div class="col-md-6" class="content has-text-centered">
    <h2 class="content has-text-centered">Signup</h2>

    <form class="form signup-form">

      <div class="content has-text-centered">
        <label for="name-signup">Name:</label>
        <input class="input is-rounded input is-primary" type="text" id="name-signup" />
      </div>

      <div class="content has-text-centered">
        <label for="email-signup">Email:</label>
        <input class="input is-rounded input is-primary" type="text" id="email-signup" />
      </div>

      <div class="content has-text-centered">
        <label for="password-signup">Password:</label>
        <input class="input is-rounded input is-primary" type="password" id="password-signup" />
      </div>

      <div class="content has-text-centered">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>

    </form>
  </div>
</div>

<script src="./login.js"></script>
